extends base.layout.pug

mixin cartItem(title, price, oldPrice)
    div.card.shadow-sm.mb-1.mb-md-2&attributes(attributes)
        div.row.no-gutters
            div.col-3.col-md-2.d-flex.align-items-center.bg-white
                img.card-img-top.w-100(src=`../images/items/item-cart/${random(1, 3)}.jpg`)
            div.col-9.col-md-10.d-flex
                // md+ card-body
                div.card-body.flex-column.flex-grow-1
                    div.row.mb-1.mb-md-4
                        a.card-link.col-md-9.card-title.mb-1(href="./item.html")
                            h5.d-none.d-md-block.mb-0 #{title}
                            h6.d-md-none.mb-0 #{title}
                        div.col-md-3.d-flex.flex-md-column.align-items-md-end
                            h5.text-success.mb-1.d-none.d-md-block $#{price}.00
                            h6.text-success.mb-1.d-md-none $#{price}.00
                            if oldPrice
                                del.text-muted.small.ml-2.ml-md-0 $#{oldPrice}.00
                    div.d-flex.justify-content-md-between.align-items-end.flex-grow-1
                        div.d-flex.align-items-end
                            div.btn-group.d-inline
                                ul.pagination.pagination-sm.m-0
                                    li.page-item.disabled
                                        a.page-link(href="#")
                                            i.fas.fa-minus
                                    li.page-item
                                        a.page-link &nbsp;1&nbsp;
                                    li.page-item
                                        a.page-link.text-info(href="#")
                                            i.fas.fa-plus
                            button.btn-outline-danger.btn.btn-sm.ml-3.d-none.d-md-block Remove
                            button.btn-outline-danger.btn.btn-sm.ml-2.d-md-none
                                i.fas.fa-trash
                        button.btn.btn-outline-info.btn-sm.ml-2
                            i.far.fa-heart

block body
    div.container.mb-5
        div
            h4.text-info.d-inline.mr-2 Your Cart
            span.text-muted (3 Items)
            hr.border-info.mt-1.mt-md-2.mb-md-4
        div.row
            div.col-lg-9
                div
                    +cartItem("Nvidia GeForce RTX 2070 XC ULTRA GAMING, 8GB GDDR6", 519, 2099)
                    +cartItem("EVGA GeForce GTX 1080 Founders Edition, 8GB GDDR5X Support (PXOC)", 789, 1099)
                    +cartItem("VGA MSI GeForce GTX 1080 Gaming X 8G", 439, 699)
            div.col-lg-3
                div.ml-lg-2
                    div.card.shadow.mt-2.mt-md-4.mt-lg-0
                        div.card-body
                            div.row
                                h4.card-link.col-6.card-title Total
                                div.col-6.d-flex.flex-column.align-items-end
                                    h4.text-success.mb-1 $1747.00
                                    del.text-muted $3897.00
                            hr.border-info
                            div.row.flex-md-row-reverse.flex-lg-row
                                div.col-md-6.col-lg-12.mb-2.d-flex.align-items-start
                                    a.btn.btn-info.flex-grow-1(href="./checkout.html") Check out
                                div.col-md-6.col-lg-12.d-flex.align-items-start
                                    a.btn.btn-outline-warning.flex-grow-1(href="./home.html") Continue shopping

    hr.border-light
